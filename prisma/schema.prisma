generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  date        DateTime
  description String
  bannerUrl   String?
  createdAt   DateTime @default(now())
  isFeatured  Boolean  @default(false)
  location    String?
  slug        String   @unique
}

model News {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  bannerUrl String?
  date      DateTime @default(now())
  slug      String   @unique
}

model Album {
  id        String         @id @default(cuid())
  name      String
  coverUrl  String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  images    GalleryImage[]
}

model GalleryImage {
  id        String   @id @default(cuid())
  imageUrl  String
  caption   String?
  createdAt DateTime @default(now())
  albumId   String?
  album     Album?   @relation(fields: [albumId], references: [id])
}

model AdminUser {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model AboutUs {
  id        String   @id @default(cuid())
  content   String
  updatedAt DateTime @updatedAt
}

model ContactInfo {
  id           String   @id @default(cuid())
  address      String?
  phone        String?
  email        String?
  facebookUrl  String?
  instagramUrl String?
  youtubeUrl   String?
  updatedAt    DateTime @updatedAt
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
